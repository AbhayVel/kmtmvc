@using KMISMModels
@using KMISMEntities;
@model Pagination

@{
    Pagination pagination = Model as Pagination;
}


<nav aria-label="Page navigation example">



    <ul class="pagination">
        @if (pagination.CurrentPage == 1)
        {
            <li class="page-item disabled" disabled><a class="page-link disabled" href="#" onclick="pagination(-1)">Previous</a></li>
        }
        else
        {
            <li class="page-item"><a class="page-link" href="#" onclick="pagination(@pagination.CurrentPage - 1)">Previous</a></li>
        }


        @for (var i = 1; i <= pagination.Pages; i = i + 1)
        {
            if (pagination.CurrentPage == i)
            {
                <li class="page-item active">
                    <a class="page-link" href="#" onclick="pagination(@i)">@i</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" href="#" onclick="pagination(@i)">@i</a>
                </li>
            }





        }

        @if (pagination.CurrentPage == pagination.Pages)
        {
            <li class="page-item disabled" disabled><a class="page-link disabled" href="#" onclick="pagination(-1)">Next</a></li>
        }
        else
        {
            <li class="page-item"><a class="page-link" href="#" onclick="pagination(@pagination.CurrentPage +1)">Next</a></li>
        }

    </ul>
</nav>

